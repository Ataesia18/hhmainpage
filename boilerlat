h2, .h2,
h3, .h3,
h4, .h4,
h5, .h5,
h6, .h6 {
    font-family: $ff-headlines;
    font-weight: $fw-bold;
    color: $color-primary;
    margin-top: 0;
    margin-bottom: $mb-headlines;
}

